#include <stdio.h>
#include <stdlib.h>
#include <conio.h>

//Procedimento
void sequencia(int i)
{
    i++; //contador
    printf(" %i", i);
}

int main()
{
    int somatorio = 0;
    int m = 2;
    int mmc = 1; //para calcular os istantes
    int QuantidadeDeObstaculos;
    printf("\n\n\t\t\t TIRO AO ALVO\n");
    printf("\nInforme a quantidade de obstaculos ate o alvo: ");
    scanf("%i", &QuantidadeDeObstaculos);

    int f[QuantidadeDeObstaculos];
    int i = 0;
    for (; i < QuantidadeDeObstaculos; i++)
    {
        printf("\nFrequencia do obstaculo");
        sequencia(i);
        printf("Â°: ");
        scanf("\n%i", &f[i]);

        int x = 0;

        while (somatorio != 2)
        {
            if (f[i] % m != 0)
            {
                m = m + 1;
                printf("\nm: %i", m);
            }
            else
            {
                mmc = mmc * m;
                printf("\nmmc: %i", mmc);

                f[i] = f[i] / m;
                x = f[i];
                printf("\nf: %i", f[i]);
                if (f[i] == 1)
                    break;
            }

            somatorio = somatorio + x;
            printf("\nsomatorio: %i", somatorio);
        }
    }
    printf("\nMenor instante de tempo: %i", mmc);

    return 0;
}
